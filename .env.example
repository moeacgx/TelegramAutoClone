API_ID=123456
API_HASH=your_api_hash
BOT_TOKEN=123456:bot_token
DATABASE_PATH=/app/data/telegram_auto_clone.db
SESSIONS_DIR=/app/sessions
NOTIFY_CHAT_ID=-1001234567890
